          <sourceIncludes><include>src/gen/thrift/gen-javabean/**</include></sourceIncludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
